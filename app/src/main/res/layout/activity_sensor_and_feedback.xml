<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kirin.feedback_master.sensorAndFeedback"
    android:id="@+id/bar">


    <Button
        android:text="FILL YOUR INFORMATION PLEASE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frontButton"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SCAN WIFI INFORMATION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wifiButton"
        android:layout_below="@+id/frontButton"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="1. How is your feeling abou the temperature?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/askView"
        android:textSize="24sp"
        android:layout_below="@+id/wifiButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SUBMIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lightred"
        android:id="@+id/subButton"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <Button
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton"
        android:background="@drawable/lightgray"
        android:layout_alignBaseline="@+id/subButton"
        android:layout_alignBottom="@+id/subButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <TextView
        android:text="Please slide the thumb "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="9dp"
        android:id="@+id/barView2"
        android:layout_below="@+id/barView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="50dip"
        android:minHeight="50dip"
        android:max="100"
        android:progress="50"
        android:thumb="@drawable/seekbar_thumb"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/subButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Your feeling about temperature is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/barView1"
        android:layout_below="@+id/askView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />


</RelativeLayout>